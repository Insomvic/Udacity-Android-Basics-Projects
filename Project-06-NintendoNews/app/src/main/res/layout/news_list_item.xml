<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="@dimen/no_padding"
    android:paddingLeft="@dimen/no_padding"
    android:paddingEnd="@dimen/full_padding"
    android:paddingRight="@dimen/full_padding">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/weight_width"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:gravity="center"
        tools:src="@drawable/bg_nintendo_news"/>

    <LinearLayout
        android:layout_width="@dimen/weight_width"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/half_padding"
        android:paddingBottom="@dimen/half_padding"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/full_padding"
        android:layout_marginStart="@dimen/full_padding"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:fontFamily="sans-serif-medium"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAllCaps="true"
            android:textSize="18sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            tools:text="I was a video game sceptic, but now I'm a fan" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thickness"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/between_text"
            android:paddingBottom="@dimen/between_text"
            android:textStyle="italic"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/details_text_size"
            tools:text="By: Nintendo" />

        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/between_text"
            android:textStyle="italic"
            android:textSize="@dimen/details_text_size"
            tools:text="Section: Games" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/between_text"
            android:textStyle="italic"
            android:textSize="@dimen/details_text_size"
            tools:text="Published: 2/9/2018 3:00 PM" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider_thickness"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="4dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:textSize="16sp"
            tools:text="Luke, how do I get this power moon? Luke!” I’m playing Super Mario Odyssey while my partner, Luke, is trying to work. “You’ll figure it out,” he says patiently." />

    </LinearLayout>

</LinearLayout>